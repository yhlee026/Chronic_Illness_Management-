<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Upload Records</title>
  </head>
  <body>
    <body>
    <div class="container mt-4">
      <!-- Header for new medical record -->
      <h1>Upload New Medical Record</h1>
      <br>
      <!-- Form to POST inputs to database -->
      <form action="/upload_med" method="POST">
        <div class="mb-3">
          <label for="doc_no" class="form-label">Document Number</label>
          <input type="text" class="form-control" id="doc_no" name="doc_no" required />
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Date</label>
          <input type="date" class="form-control" id="date" name="date" required />
        </div>
        <div class="mb-3">
          <label for="type" class="form-label">Test Type</label>
          <input type="text" class="form-control" id="type" name="type" required />
        </div>
        <div class="mb-3">
          <label for="doctor" class="form-label">Test Performed By</label>
          <input type="text" class="form-control" id="doctor" name="doctor" required />
        </div>
        <div class="mb-3">
          <label for="report" class="form-label">Report Results</label>
          <textarea class="form-control" id="report" name="report" rows="3" required></textarea>
        </div>
        <!-- Back button to records page -->
        <a href="/records" class="btn btn-secondary">Back</a>
        <!-- Button to submit form -->
        <button type="submit" class="btn btn-secondary">Submit</button>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
