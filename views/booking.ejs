    </div>

    <div class="calendar">
      <!-- date selector -->
      <div class="selector">
        <!-- select date -->
        <div>
          <label for="calendar">Choose a date: Unavailable</label>
        </div>

        <!-- select doctor -->
        <div>
          <label for="doctor-select">Choose a doctor: Unavailable</label>
        </div>

        <!-- book button -->
        <button type="button" class="btn btn-primary mt-2">Book</button>
      </div>

      <!-- available doctors -->
      <div class="availableDoctor">
        <ul class="list-group">
          <li class="list-group-item active" aria-current="true">
            Available Doctors
          </li>
          <li class="list-group-item">Unavailable</li>
        </ul>
      </div>
    </div>
    <!-- Footer -->
    <footer>
      <div class="container-fluid" id="footer-container">
        <div class="logo">
          <h1>EasiDoc</h1>
        </div>
        <div class="row">
          <div class="col-sm-5">
            <h3>Contact us</h3>
            <div class="contact-info" id="contact">
              <p><strong>Email Address:</strong> support@example.com</p>
              <p><strong>Phone Number:</strong> +123-456-7890</p>
              <p>
                <strong>Physical Address:</strong> 123 Example Street, Suite
                456, City, State, ZIP Code
              </p>
            </div>
          </div>
          <div class="col-sm-4">
            <h3>Business Hours</h2>
            <div class="business-hours">
              <p><strong>Monday - Friday:</strong> 9:00 AM - 5:00 PM</p>
              <p><strong>Saturday - Sunday:</strong> Closed</p>
