<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Home Page</title>
    <link rel="stylesheet" href="records.css">
    <link rel="stylesheet" href="navigation.css">
</head>
<body>
    <header>
        <nav>
            <ul class="nav-links">
                <li><a id="navitem1" href="/home">Home</a></li>
                <li><a id="navitem2" href="/records">Medical Records</a></li>
                <li><a id="navitem3" href="/booking">Booking</a></li>
                <li><a id="navitem4" href="/history">Consultation History</a></li>
            </ul>
        </nav>
    </header>

    <div class="searchRecord">
      <!-- search bar for finding medical records -->
      <form action="/search" method="GET">
          <input type="text" name="query" placeholder="Search..." required>
          <button type="submit" class="btn btn-warning">Search</button>
      </form>
    </div>

    <!-- button to update new records -->
     <div class="updateButton">
      <button type="button" class="btn btn-primary">
          Upload new record
      </button>
    </div>

    <!-- table that shows the most recent records (5 records) -->

    <div class="recordTable">
      <table class="table table-bordered table-striped-columns table-hover">
          <thead>
            <tr class="table table-info">
              <th scope="col">#</th>
              <th scope="col">Date/Time</th>
              <th scope="col">Type</th>
              <th scope="col">Doctor</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>latest date</td>
              <td>heart disease</td>
              <td>Dr Liu</td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>second latest date</td>
              <td>diabetes</td>
              <td>Dr Tan</td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>third latest date</td>
              <td>colon cancer</td>
              <td>Dr Lee</td>
            </tr>
            <tr>
              <th scope="row">4</th>
              <td>fourth latest date</td>
              <td>prostate cancer</td>
              <td>Dr Koo</td>
            </tr>
            <tr>
              <th scope="row">5</th>
              <td>fifth latest date</td>
              <td>lung cancer</td>
              <td>Dr Teow</td>
            </tr>
          </tbody>
        </table>
      </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>